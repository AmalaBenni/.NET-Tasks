@model IEnumerable<EmployeeApp.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<p>
    <a href="@Url.Action("Create", "Employees")" class="btn btn-primary">Add New Employee</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
               
                <td>
                        @* <a href="@Url.Action("Details", "Employees", new { id = employee.Id })" class="btn btn-info btn-sm">Details</a> *@
                    <a href="@Url.Action("Edit", "Employees", new { id = employee.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Employees", new { id = employee.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>