@model ProductListDb.Models.product

<h2>Edit Product</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Price</label>
        <input asp-for="Price" />
    </div>
    <div>
        <label>Quantity</label>
        <input asp-for="Quantity" />
    </div>
    <div>
        <button type="submit">Update</button>
        <a asp-action="Index">Back to List</a>
    </div>
</form>