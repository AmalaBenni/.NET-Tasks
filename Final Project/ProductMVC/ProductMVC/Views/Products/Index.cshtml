@model IEnumerable<ProductMVC.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1 class="text-center">Products</h1>

<p>
    <div>
        <a href="@Url.Action("Create", "Products")">Add New Products</a>
        <a href="@Url.Action("Search", "Products")">Search Products</a>
    </div>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>StockQuantity</th>
            <th>AddedDate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td>@product.AddedDate</td>
                <td>
                    <a href="@Url.Action("Edit", "Products", new { id = product.Id })">Edit</a> |

                    <form asp-action="Delete" asp-controller="Products" asp-route-id="@product.Id" method="post" class="d-inline delete-form">
                        <button type="submit" class="btn btn-link p-0 m-0 align-baseline">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteForms = document.querySelectorAll(".delete-form");

            deleteForms.forEach(function (form) {
                form.addEventListener("submit", function (e) {
                    const confirmed = confirm("Are you sure you want to delete this Product?");
                    if (!confirmed) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}